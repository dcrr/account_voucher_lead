<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="low_priority_payment_form2" model="ir.ui.view">
            <field name="name">low.priority.payment.form2</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_low_priority_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//form[@string='Bill Payment']/group/field[@name='journal_id']" position="after">
                    <field name="tipo_tarjeta" on_change="recompute_voucher_lines_new(partner_id, journal_id, amount, currency_id, type, date, tipo_tarjeta, nro_cupon, date_filterFrom, date_filterTo, context)"/>
                    <field name="nro_tarjeta" />
                    <!--on_change="onchange_tipo_tarjeta(partner_id, journal_id, amount, currency_id, type, date, tipo_tarjeta, nro_cupon, context)"-->
                    <field name="nro_cupon" />
                </xpath>
                <xpath expr="//form[@string='Bill Payment']/notebook/page[@string='Payment Information']/field[@name='line_cr_ids']" position="before">
                    <group col="4">
                    <field name="date_filterFrom" on_change="recompute_voucher_lines_new(partner_id, journal_id, amount, currency_id, type, date, tipo_tarjeta, nro_cupon, date_filterFrom, date_filterTo, context)"/>
                    <field name="date_filterTo" on_change="recompute_voucher_lines_new(partner_id, journal_id, amount, currency_id, type, date, tipo_tarjeta, nro_cupon, date_filterFrom, date_filterTo, context)"/>
                    </group>
                </xpath>
                <xpath expr="//form[@string='Bill Payment']/notebook/page[@string='Payment Information']/field[@name='line_cr_ids']/tree[@string='Open Customer Journal Entries']/field[@name='amount_unreconciled']" position="after">
                    <field name="reconcile"/>
                </xpath>
           </field>
        </record>

        <record id="view_vendor_receipt_form2" model="ir.ui.view">
            <field name="name">vendor.receipt.form2</field>
            <field name="model">account.voucher</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_form" />
            <field name="arch" type="xml">
                <xpath expr="//form[@string='Receipt']/sheet/group/group/field[@name='journal_id']" position="after">
                    <field name="issuer_payment_method" />
                </xpath>
           </field>
        </record>
    </data>
</openerp>
